<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">

	<!-- 로그인 (회원정보 가져오기) -->
	<select
		id="getUser"
		parameterType="com.javaex.vo.UserVo"
		resultType="com.javaex.vo.UserVo">
		<![CDATA[
			select no,
					name
			from users
			where id = #{id}
			and password = #{password}
		]]>
	</select>

	<!-- 회원가입 (회원정보 저장) -->
	<insert
		id="insert"
		parameterType="com.javaex.vo.UserVo">
		<![CDATA[
			insert into users
			values (seq_users_no.nextval, #{id}, #{password}, #{name}, #{gender})
		]]>
	</insert>

	<!-- 수정폼 (회원정보 가져오기) -->
	<select
		id="getInfo"
		parameterType="com.javaex.vo.UserVo"
		resultType="com.javaex.vo.UserVo">
		<![CDATA[
			select no,
					id,
					password,
					name,
					gender
			from users
			where no = #{no}
		]]>
	</select>

	<!-- 수정 (회원정보 수정) -->
	<update
		id="update"
		parameterType="com.javaex.vo.UserVo">
		<![CDATA[
			update users
			set name = #{name},
				gender = #{gender},
				password = #{password}
			where no = #{no}
		]]>
	</update>

</mapper>